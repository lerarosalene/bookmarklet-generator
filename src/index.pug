doctype html

html
  head
    meta(charset="utf-8")
    title Bookmarklet Generator
    link(rel="stylesheet", href="/index.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0")
    link(rel="icon" type="image/png" href="/favicon.png")
  body
    div.main
      div.left-pane
        div.controls
          input#bookmark-name(placeholder="Enter bookmark name")
          textarea.grow#code
      div.right-pane.hidden#bookmarklet-container
        h3.top-header Bookmarklet
        div.bookmarklet-wrapper
          a.bookmarklet#bookmarklet(href="javascript:(()=>{})()") Bookmarklet
          span#help ‚Üê drag this to your bookmarks bar
        h3.esbuild-header
          span Generated code
          code esbuild --minify --format=iife
        div.button-container
          button#copy.copy-code-button
            span.material-symbols-outlined.icon-small content_copy
            span Copy generated code
        textarea#result(readonly)
        h3 Share this page
        div.share-row
          label(for="share-full") Full link
          input#share-full.grow(readonly)
          button#share-full-button.copy-code-button
            span.material-symbols-outlined.icon-small content_copy
            span Copy
        div.share-row#is-gd-create-row
          button.grow.create-is-gd-button#is-gd-create
            span Create shortened link (is.gd)
        div.share-row.hidden-self#is-gd-row
          label(for="share-short") Short link
          input#share-short(readonly)
          button#share-short-button.copy-code-button
            span.material-symbols-outlined.icon-small content_copy
            span Copy
        div.grow
        div.footer-row
          div
            a.github-link(href="https://github.com/lerarosalene/bookmarklet-generator/", target="_blank")
              img(src="/github.svg", height="20px")
              span Source code
        div.footer-row
          div
            a.attribution(href="https://www.flaticon.com/free-icons/bookmark" title="bookmark icons")
              span Bookmark icons created by Fathema Khanom - Flaticon
    script(src="/index.js")
